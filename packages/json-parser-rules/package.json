{
  "name": "@ton.js/json-parser-rules",
  "version": "0.0.0-beta.0",
  "description": "Parse JSON by rules",
  "type": "module",
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    "import": "./dist/index.mjs",
    "require": "./dist/index.cjs"
  },
  "sideEffects": false,
  "scripts": {
    "test": "TS_NODE_PROJECT='tsconfig.test.json' mocha",
    "build": "run-s build:clean && run-p build:types build:esbuild",
    "build:clean": "rimraf ./dist/** ./temp",
    "build:esbuild": "ts-node ./esbuild.ts",
    "build:types": "run-s build:types:compile build:types:extract",
    "build:types:compile": "tsc -p ./tsconfig.types.json",
    "build:types:extract": "api-extractor run --local --verbose"
  },
  "keywords": [
    "json",
    "json-parse",
    "json-parser",
    "ton.js"
  ],
  "homepage": "https://github.com/ton-js/json-parser#usage-rules",
  "bugs": {
    "url": "https://github.com/ton-js/json-parser/issues"
  },
  "author": {
    "name": "Slava Fomin II",
    "email": "slava@fomin.io",
    "url": "https://github.com/slavafomin"
  },
  "license": "MIT",
  "engines": {
    "node": ">=14"
  },
  "files": [
    "dist/",
    "README.md"
  ],
  "publishConfig": {
    "access": "public",
    "tag": "beta"
  },
  "devDependencies": {
    "@microsoft/api-extractor": "^7.33.8",
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "@types/node": "^14.18.36",
    "chai": "^4.3.7",
    "esbuild": "^0.16.17",
    "mocha": "^10.2.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  }
}
